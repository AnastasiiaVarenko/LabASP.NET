@using Lab3.Models
@model Dictionary<int, Post>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<h1>Lista postów</h1>
<a class="btn btn-primary" asp-controller="Post" asp-action="Create">Utworz post</a>
<table class="table">
    <thead>
        <tr>
            <th>
                Zawartość
            </th>
            <th>
                Autor
            </th>
            <th>
                Data publikacji
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in @Model)
        {
            <tr>
                <td>
                    @item.Value.Content
                </td>
                <td>
                    @item.Value.Author
                </td>
                <td>
                    @item.Value.PublicationDate
                </td>
                <td>
                    <a class="btn btn-outline-primary" asp-controller="Post" asp-action="Update" asp-route-id="@item.Key">Edytuj</a>
                    <a class="btn btn-outline-info" asp-controller="Post" asp-action="Details" asp-route-id="@item.Key">Szczegoly</a>
                    <a class="btn btn-outline-danger" asp-controller="Post" asp-action="Delete" asp-route-id="@item.Key">Usun</a>
                </td>
            </tr>
        }
    </tbody>
</table>